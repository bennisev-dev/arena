generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  sales_rep
  service_rep
  manager
}

enum SourceSystem {
  elead
  fortellis
  xtime
  dripjobs
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  users       User[]
  crm_webhooks CrmWebhook[]

  @@map("organizations")
}

model CrmWebhook {
  id              String   @id @default(cuid())
  organization_id String
  webhook_secret  String   @unique
  crm_type        String   // dripjobs, elead, fortellis, xtime
  is_active       Boolean  @default(true)
  last_used_at    DateTime?
  request_count   Int      @default(0)
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  organization Organization @relation(fields: [organization_id], references: [id], onDelete: Cascade)

  @@index([webhook_secret])
  @@index([organization_id])
  @@map("crm_webhooks")
}

model User {
  id                String       @id @default(cuid())
  organization_id   String?      // required after seed backfill
  name              String
  email             String
  password_hash     String
  role              Role?
  dealership_id     String?
  external_user_id  String?
  crm_source        SourceSystem?
  onboarding_complete Boolean    @default(false)
  created_at        DateTime     @default(now())
  updated_at        DateTime     @updatedAt

  organization Organization? @relation(fields: [organization_id], references: [id], onDelete: Cascade)
  performances      Performance[]

  @@unique([organization_id, email], map: "organization_email_unique")
  @@unique([organization_id, dealership_id, external_user_id], map: "org_dealership_external_user_unique")
  @@index([organization_id])
  @@index([dealership_id])
}

model Performance {
  id                  String    @id @default(cuid())
  user_id             String
  month               Int
  year                Int
  leads_created       Int       @default(0)
  cars_sold           Int       @default(0)
  vehicle_value_total Decimal   @default(0) @db.Decimal(14, 2)
  profit_total        Decimal   @default(0) @db.Decimal(14, 2)
  services_completed  Int       @default(0)
  hours_billed        Decimal   @default(0) @db.Decimal(10, 2)
  hours_worked        Decimal   @default(0) @db.Decimal(10, 2)
  created_at          DateTime  @default(now())
  updated_at          DateTime  @updatedAt

  user                User      @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([user_id, month, year], map: "performance_user_month_year_unique")
  @@index([month, year])
}

model RawIngest {
  id                   String       @id @default(cuid())
  organization_id      String?
  source_system        SourceSystem
  external_record_id   String
  payload              Json
  received_at          DateTime     @default(now())
  processed_user_id    String?
  processed_performance_id String?
  error_message        String?

  @@unique([organization_id, source_system, external_record_id], map: "raw_ingest_idempotency_unique")
  @@index([received_at])
  @@index([organization_id])
}
